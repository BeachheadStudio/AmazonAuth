<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.singlemalt.amazon.auth.amazonauth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.amazon.identity.auth.device.authorization.AuthorizationActivity" android:theme="@android:style/Theme.NoDisplay" android:allowTaskReparenting="true" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- android:host must use the full package name
                    found in Manifest General Attributes -->
                <data android:host="BUNDLE_ID" android:scheme="amzn" />
            </intent-filter>
        </activity>

    </application>

</manifest>
